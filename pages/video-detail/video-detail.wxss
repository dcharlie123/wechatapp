.Video {
  width: 100%;
  height: 422rpx;
}

.title {
  font-size: 40rpx;
  color: #222;
  line-height: 50rpx;
}

.video-detail {
  padding: 27rpx 30rpx 0 30rpx;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.bottom-left {
  font-size: 22rpx;
  color: #999;
}

.bottom-left .time {
  margin-left: 20rpx;
}

.bottom-right {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.like_num {
  font-size: 22rpx;
  color: #999;
  vertical-align: middle;
  margin-right: 15rpx;
}

.like_btn {
  vertical-align: middle;
  width: 36.6rpx;
  height: 36.6rpx;
}

.video_des {
  margin-top: 52rpx;
  font-size: 26rpx;
