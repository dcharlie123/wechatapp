/* pages/app/home/video-detail/video-detai.wxss */

.Video {
  width: 100%;
  height: 422rpx;
}

.title {
  font-size: 40rpx;
  color: #222;
  line-height: 50rpx;
}

.video-detail {
  padding: 27rpx 30rpx 0 30rpx;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.bottom-left {
  font-size: 22rpx;
  color: #999;
}

.bottom-left .time {
  margin-left: 20rpx;
}

.bottom-right {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.like_num {
  font-size: 22rpx;
  color: #999;
  vertical-align: middle;
  margin-right: 15rpx;
}

.like_btn {
  vertical-align: middle;
  width: 36.6rpx;
  height: 36.6rpx;
}

.video_des {
  margin-top: 52rpx;
  font-size: 26rpx;
  color: #777;
  letter-spacing: 0;
  line-height: 40rpx;
}

.share {

  padding: 0;
  margin: 16rpx 0 0 46rpx;
  line-height: normal;
  background: transparent;
  overflow: auto;
  font-size: 0;
  display: inline;
}
.share:after {
    content: none;
}
.shareImg{
  width: 42rpx;
  height: 42rpx;
}
