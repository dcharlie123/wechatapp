.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  background: #fff;
}

.content {
  flex: 1;
  width: 100%;
}

.bottom-tab {
  background-color: #fff;
  flex: 1;
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  z-index: 9999;
}

.tab-item {
  width: 50%;
  height: 100%;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.active {
  color: #444 !important;
}

.item-text {
  font-size: 28rpx;
  display: inline-block;
  vertical-align: top;
  color: #999;
  
}

.item-img {
  display: inline-block;
  width: 55rpx;
  height: 55rpx;
  vertical-align: top;
  margin-right: 15.6rpx;
}


