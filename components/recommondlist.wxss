/* videoW */

.videoW {
  height: 422rpx;
  width: 100%;
  overflow: hidden;
  position: relative;
}

.myVideo {
  width: 100%;
  height: 422rpx;
}

.list-cover {
  position: absolute;
  z-index: 99;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.list-cover .cover {
  width: 100%;
  height: 100%;
}

.play-icon {
  position: absolute;
  z-index: 100;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.icon {
  width: 90rpx;
  height: 90rpx;
}

.videoTime {
  position: absolute;
  z-index: 100;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 20rpx;
  color: #fff;
  width: 85rpx;
  height: 36rpx;
  background: rgba(0,0,0,.6);
  border-radius: 36rpx;
  text-align: center;
  line-height: 36rpx;
}

/* video-des */

.video-des {
  padding: 30rpx 30rpx 51rpx;
}

.video_title {
  font-size: 36rpx;
  color: #222;
  font-weight: 600;
}

.video-des .des {
  font-size: 26rpx;
  color: #777;
  margin-top: 12rpx;
  line-height: 40rpx;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* background: #ccc; */
}

.bottom-left {
  padding-top: 10rpx;
  font-size: 22rpx;
  color: #999;
}

.bottom-left .time {
  margin-left: 20rpx;
}

.bottom-right {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.like_num {
  font-size: 22rpx;
  color: #999;
  vertical-align: middle;
  margin-right: 15rpx;
}

.like_btn {
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;
}

.share {
  /* height: 46rpx; */
  /* width: 46rpx; */
  padding: 0;
  margin: 14rpx 0 0 46rpx;
  line-height: normal;
  background: transparent;
  /* border: 1px solid transparent; */
  overflow: auto;
  font-size: 0;
   /* position: static;  */
  display: inline;
}
.share:after {
    content: none;
}
.shareImg{
  width: 40rpx;
  height: 40rpx;
}